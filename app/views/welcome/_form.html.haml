= form_tag try_login_path, :method => :post do
  .row
    .col-md-6
      .form-group
        .input-group.input-group-md
          %span.input-group-addon.px50
            %i.fa.fa-user
          = text_field_tag :email, '', class: 'form-control', placeholder: User.human_attribute_name(:email)
  .row
    .col-md-6 
      .form-group
        .input-group.input-group-md
          %span.input-group-addon.px50
            %i.fa.fa-key
          = password_field_tag :password, '', class: 'form-control', placeholder: User.human_attribute_name(:password)
  .row
    .col-md-6 
      .checkbox
        %label
          = check_box_tag :remember_me, false, true
          Запомнить меня 
  .row
    .form-actions
      .col-md-2
        = submit_tag "Войти", class: 'btn btn-primary'
      .col-md-2      
        = link_to 'Забыли пароль?', new_password_reset_path, class: 'btn'
      .col-md-2
        = link_to 'Регистрация', new_user_path, class: 'btn'

